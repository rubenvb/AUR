# Maintainer: rubenvb vanboxem <dottie> ruben <attie> gmail <dottie> com
pkgname=i686-w64-mingw32-binutils-cvs
pkgver=20111110
pkgrel=1
pkgdesc="Cross binutilsfor i686-w64-mingw32 (Windows 32-bit)"
arch=('i686' 'x86_64')
url="http://www.gnu.org/software/binutils"
license=('GPL')
groups=()
depends=('zlib')
makedepends=('git')
#checkdepends=('dejagnu') # Windows executables could run on Arch through bin_mft and Wine
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=('!libtool' '!emptydirs')
source=()
md5sums=()

_gitroot=git://repo.or.cz/binutils.git
_gitname=binutils

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname" --depth=1
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  mkdir "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  $srcdir/$_gitname/configure --prefix=/usr \
      --target=i686-w64-mingw32 \
      --enable-shared \
      --disable-multilib
  make configure-host
  make tooldir=${pkgdir}/usr
}

package() {
  cd ${srcdir}/binutils-build
  make prefix=${pkgdir}/usr tooldir=${pkgdir}/usr install
}

