# Maintainer: rubenvb
pkgname=i686-w64-mingw32-headers
pkgver=2.0
pkgrel=1
pkgdesc="MinGW-w64 headers for i686-w64-mingw32-gcc"
arch=('any')
url="mingw-w64.sourceforge.net"
license=('custom')
groups=
depends=()
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=(!strip)
source=(http://sourceforge.net/projects/mingw-w64/files/mingw-w64/mingw-w64-release/mingw-w64-v$pkgver.tar.bz2)
md5sums=('5c6341fbe25576be6f899cbda133cb4a')

build() {
  cd "${srcdir}/mingw-w64-v${pkgver}"
  mkdir -p headers-build
  cd headers-build
  ../mingw-w64-headers/configure --prefix=/usr --enable-sdk=all --host=i686-w64-mingw32
}

package() {
  cd "${srcdir}/mingw-w64-v${pkgver}/headers-build"
  make DESTDIR="${pkgdir}" install
  install -Dm644 ../COPYING.MinGW-w64/COPYING.MinGW-w64.txt "$pkgdir/usr/share/licenses/$pkgname/COPYING.MinGW-w64.txt"
  install -Dm644 ../COPYING.MinGW-w64-runtime/COPYING.MinGW-w64-runtime.txt "$pkgdir/usr/share/licenses/$pkgname/COPYING.MinGW-w64-runtime.txt"
}

