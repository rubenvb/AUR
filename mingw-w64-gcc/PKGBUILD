# Maintainer: rubenvb
pkgname=mingw-w64-gcc-base
pkgver=4.6.2
pkgrel=1
pkgdesc="Cross GCC for the MinGW-w64 cross-compiler"
arch=('i686' 'x86_64')
url="http://gcc.gnu.org"
license=('GPL' 'LGPL' 'FDL' 'custom')
groups=('mingw-w64')
depends=('zlib' 'libmpc' 'ppl' 'cloog')
makedepends=('mingw-w64-binutils' 'mingw-w64-headers' 'mingw-w64-gcc-base' 'libmpc' 'cloog' 'ppl')
#checkdepends=('dejagnu') # Windows executables could run on Arch through bin_mft and Wine
optdepends=()
provides=()
conflicts=('mingw-w64-gcc-base')
replaces=()
backup=()
options=('!libtool' '!emptydirs')
source=(ftp://gcc.gnu.org/pub/gcc/releases/gcc-${pkgver}/gcc-core-${pkgver}.tar.bz2)
md5sums=('780f614ab18c7a9066dec6387d7490b2')

_targets="i686-w64-mingw32 x86_64-w64-mingw32"

build() {
  cd "${srcdir}/gcc-${pkgver}"

  #do not install libiberty
  sed -i 's/install_to_$(INSTALL_DEST) //' libiberty/Makefile.in

  echo ${pkgver} > gcc/BASE-VER
   
  for _target in ${_targets}; do
    mkdir -p gcc-build-${_target} && cd gcc-build-${_target}
    
    ${srcdir}/gcc-${pkgver}/configure --prefix=/usr \
        --target=${_target} \
        --enable-languages=c,lto,c++,objc,objc++,fortran \
        --enable-shared --enable-static \
        --enable-threads=win32 --enable-fully-dynamic-string \
        --with-system-zlib --with-ppl --enable-cloog-backend=isl \
        --enable-lto --enable-sjlj-exceptions \
        --disable-nls --disable-werror \
        --disable-multilib --enable-checking=release
    make all
  done
}

package() {
  for _target in ${_targets}; do
    make install
  done
}